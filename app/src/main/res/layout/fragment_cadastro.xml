<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutCadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroFragment">

    <Button
        android:id="@+id/cadastroBackButton"
        android:layout_width="59dp"
        android:layout_height="49dp"
        android:layout_marginTop="40dp"
        android:background="#00FFFFFF"
        app:icon="?attr/homeAsUpIndicator"
        app:iconTint="#9E000A"
        app:layout_constraintBottom_toTopOf="@+id/textViewCadastroTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.406" />

    <TextView
        android:id="@+id/textViewCadastroTitle"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="140dp"
        android:text="@string/cadastre_se"
        android:textColor="#2E3E4B"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCadastroDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/informe_seu_e_mail_e_crie_uma_senha"
        android:textColor="#2E3E4B"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCadastroTitle"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewCadastroEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp"
        android:text="@string/digite_seu_e_mail"
        android:textColor="#2E3E4B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCadastroDescription" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextFieldCelular"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:hint="@string/digite_seu_e_mail"
        android:textColorHint="#BEC3C7"
        app:boxBackgroundColor="#2BF42F04"
        app:boxStrokeColor="#00FFFFFF"
        app:boxStrokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCadastroEmail"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textViewCadastroSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:text="@string/crie_uma_senha"
        android:textColor="#2E3E4B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outlinedTextFieldCelular" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextFieldSenha"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:hint="@string/digite_sua_senha"
        android:textColorHint="#BEC3C7"
        app:boxBackgroundColor="#2BF42F04"
        app:boxStrokeColor="#00FFFFFF"
        app:boxStrokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCadastroSenha"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#BEC3C7"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textViewCadastroRepitaSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:text="@string/repita_sua_senha_label"
        android:textColor="#2E3E4B"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outlinedTextFieldSenha" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextFieldRepitaSenha"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:hint="@string/repita_sua_senha_hint"
        android:textColorHint="#BEC3C7"
        app:boxBackgroundColor="#2BF42F04"
        app:boxStrokeColor="#00FFFFFF"
        app:boxStrokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCadastroRepitaSenha"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#BEC3C7"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/cadastroButtonAcessar"
        android:layout_width="350dp"
        android:layout_height="67dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#AD000B"
        android:text="@string/cadastrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>