<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="@color/colorVermelhoPrincipal"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:id="@+id/group_181"
                android:layout_width="352dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="52dp"
                tools:ignore="UselessParent">

                <RelativeLayout
                    android:id="@+id/logo_rocket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/rocket"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/todo3"
                        android:src="@drawable/rocket"
                        tools:ignore="ImageContrastCheck" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/logo_ringunfilled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="330dp"
                    android:layout_marginTop="0dp">

                    <ImageView
                        android:id="@+id/ringunfilled"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:contentDescription="@string/todo4"
                        android:src="@drawable/ringunfilled"
                        tools:ignore="ImageContrastCheck" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/escolha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center"
            android:layout_marginTop="105dp"
            android:text="@string/escolha_string"
            android:textColor="@color/colorFonteCinza"
            android:textSize="35sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/os_sabores_da_sua_pizza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:gravity="center"
            android:layout_marginTop="152dp"
            android:text="@string/os_sabores_da_sua_pizza_string"
            android:textColor="@color/colorFonteCinza"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <Button
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:layout_marginTop="130dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/vector" />

        <RelativeLayout
            android:id="@+id/slotflavor"
            android:layout_width="400dp"
            android:layout_height="96dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="9dp">

            <TextView
                android:id="@+id/sabor_1_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sabor_1_string"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/sabor"
                android:layout_width="410dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorVermelhoPrincipal">

                <TextView
                    android:id="@+id/salgado_ou_doce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/salgado_ou_doce_string"
                    android:textColor="@color/colorCinzaFundo"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/X"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="346dp"
                    android:layout_marginTop="23dp"
                    android:contentDescription="@string/x"
                    android:src="@drawable/close"
                    tools:ignore="ImageContrastCheck" />

            </RelativeLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/buttonCarrinhoConfirmar"
            android:layout_width="500dp"
            android:layout_height="65dp"
            android:layout_marginTop="585dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:text="@string/confirmar"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/colorVermelhoPrincipal"
            tools:ignore="VisualLintButtonSize" />

        <RelativeLayout android:id="@+id/bar"
            android:layout_marginTop="670dp"
            android:layout_marginStart="0dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorCinzaFundo">

            <RelativeLayout android:id="@+id/rectangle_161"
                android:layout_marginTop="-57dp"
                android:layout_marginStart="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="VisualLintBounds">

            </RelativeLayout>

            <RelativeLayout android:id="@+id/profile"
                android:layout_marginTop="16dp"
                android:layout_marginStart="340dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/icon_profile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/profile"
                    android:contentDescription="@string/vector2"
                    tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

            </RelativeLayout>

            <RelativeLayout android:id="@+id/pizza"
                android:layout_marginTop="16dp"
                android:layout_marginStart="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/icon_pizza"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/pizza"
                    android:contentDescription="@string/vector"
                    tools:ignore="TouchTargetSizeCheck" />

            </RelativeLayout>

            <RelativeLayout android:id="@+id/cart"
                android:layout_marginTop="16dp"
                android:layout_marginStart="190dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/icon_cart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/cart"
                    android:contentDescription="@string/vector_ek6"
                    tools:ignore="TouchTargetSizeCheck" />

            </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>